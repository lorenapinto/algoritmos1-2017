
#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int opcion;
	float base,altura,area;
	cout<<"-------------------MENU------------------"<<endl;
	cout<<"1.area del triangulo"<<endl;
	cout<<"2.area del rectangulo"<<endl;
	cout<<"3.area del cuadrado"<<endl;
	cout<<"0.salir"<<endl;
	cin>>opcion;
	switch(opcion){
    case 1:
	{
		cout<<"ingrese base:  ";
		cin>>base;
		cout<<"ingrese altura:  ";
		cin>>altura;
		area=(base*altura)/2;
		cout<<"el area es:  "<<area;
		break;
	}
    case 2:
	{
		cout<<"ingrese base:  ";
		cin>>base;
		cout<<"ingrese altura:  ";
		cin>>altura;
		area=base*altura;
		cout<<"el area es:  "<<area;
		break;
	}
    case 3:
	{
		cout<<"ingrese lado:  ";
		cin>>base;
		area=base*base;
		cout<<"el area es:"<<area;
		break;
	}
    case 0:
	    cout<<"salir";
		break;
	default: cout<<"opcion invalida.";break;
	}
	
	getch();
}
